# ============================================================
# ENTERPRISE HR SYSTEM - ENVIRONMENT CONFIGURATION
# ============================================================
# SECURITY WARNING: Never commit actual values to git!
# Copy this file to .env and fill in your values
# ============================================================

# ============================================================
# CORE SERVER CONFIGURATION
# ============================================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ============================================================
# SECURITY & AUTHENTICATION
# ============================================================
# JWT Configuration - CHANGE THESE IN PRODUCTION!
# Generate strong secrets: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_minimum_32_characters
JWT_REFRESH_SECRET=CHANGE_ME_DIFFERENT_FROM_ACCESS_SECRET
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_minimum_32_chars

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=company
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# Database SSL (Production)
DB_SSL_ENABLED=false
DB_SSL_CA_PATH=
DB_SSL_REJECT_UNAUTHORIZED=true

# ============================================================
# ENCRYPTION & DATA PROTECTION
# ============================================================
# AES-256 encryption key for sensitive data (32 bytes base64)
DATA_ENCRYPTION_KEY=CHANGE_ME_32_BYTE_ENCRYPTION_KEY_BASE64
DATA_ENCRYPTION_ALGORITHM=aes-256-gcm

# ============================================================
# AI ENGINE CONFIGURATION
# ============================================================
LEAVE_AI_URL=http://localhost:8001
ONBOARDING_AI_URL=http://localhost:8002
PERFORMANCE_AI_URL=http://localhost:8003
RECRUITMENT_AI_URL=http://localhost:8004

# OpenAI (if using AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# ============================================================
# GOOGLE WORKSPACE INTEGRATION
# ============================================================
# Setup: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
GOOGLE_CALENDAR_ENABLED=false

# ============================================================
# MICROSOFT 365 INTEGRATION
# ============================================================
# Setup: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/auth/microsoft/callback

# ============================================================
# SSO CONFIGURATION
# ============================================================
# SAML SSO
SAML_ENABLED=false
SAML_ENTRY_POINT=
SAML_ISSUER=
SAML_CERT_PATH=
SAML_CALLBACK_URL=http://localhost:5000/api/auth/saml/callback

# OAuth2 Generic
OAUTH2_ENABLED=false
OAUTH2_AUTHORIZATION_URL=
OAUTH2_TOKEN_URL=
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=

# ============================================================
# TWO-FACTOR AUTHENTICATION (2FA)
# ============================================================
TWO_FACTOR_ENABLED=false
TWO_FACTOR_ISSUER=CompanyHR
TWO_FACTOR_ALGORITHM=SHA1
TWO_FACTOR_DIGITS=6
TWO_FACTOR_PERIOD=30

# ============================================================
# SLACK INTEGRATION
# ============================================================
# Setup: https://api.slack.com/apps
SLACK_ENABLED=false
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_WEBHOOK_URL=
SLACK_APP_ID=

# ============================================================
# MICROSOFT TEAMS INTEGRATION
# ============================================================
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@company.com
EMAIL_FROM_NAME=Company HR System

# SendGrid (Alternative)
SENDGRID_API_KEY=

# AWS SES (Alternative)
AWS_SES_ACCESS_KEY=
AWS_SES_SECRET_KEY=
AWS_SES_REGION=us-east-1

# ============================================================
# PAYROLL INTEGRATION
# ============================================================
# Supported: adp, workday, bamboohr, gusto, custom
PAYROLL_PROVIDER=custom
PAYROLL_ENABLED=false
PAYROLL_API_URL=
PAYROLL_API_KEY=
PAYROLL_CLIENT_ID=
PAYROLL_CLIENT_SECRET=

# ============================================================
# HRIS INTEGRATION
# ============================================================
HRIS_PROVIDER=custom
HRIS_ENABLED=false
HRIS_API_URL=
HRIS_API_KEY=

# ============================================================
# REAL-TIME NOTIFICATIONS (Pusher)
# ============================================================
PUSHER_ENABLED=false
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=us2

# ============================================================
# FEATURE FLAGS
# ============================================================
FEATURE_CALENDAR_SYNC=false
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_SLACK_NOTIFICATIONS=false
FEATURE_TEAMS_NOTIFICATIONS=false
FEATURE_PAYROLL_SYNC=false
FEATURE_AUTO_APPROVAL=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_SSO=false
FEATURE_AUDIT_LOG=true
FEATURE_DATA_EXPORT=true

# ============================================================
# COMPLIANCE & AUDIT
# ============================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
PII_ENCRYPTION_ENABLED=true

# ============================================================
# MULTI-TENANCY (SaaS Mode)
# ============================================================
MULTI_TENANT_ENABLED=false
TENANT_ISOLATION_MODE=schema
DEFAULT_TENANT_ID=default

# ============================================================
# MONITORING & OBSERVABILITY
# ============================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# Metrics (Prometheus)
METRICS_ENABLED=false
METRICS_PATH=/metrics
METRICS_PORT=9090

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================
# FILE STORAGE
# ============================================================
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# AWS S3
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=
AWS_S3_SECRET_KEY=

# ============================================================
# BACKUP CONFIGURATION
# ============================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups
BACKUP_ENCRYPTION_ENABLED=true

# ============================================================
# API DOCUMENTATION
# ============================================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs
API_DOCS_AUTH_REQUIRED=false

# ============================================================
# REDIS (Session Store / Cache)
# ============================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================
# WEBHOOK CONFIGURATION
# ============================================================
WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET
WEBHOOK_RETRY_COUNT=3
WEBHOOK_TIMEOUT_MS=30000